<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data"/>
                <div class="mb-3 row">
                    <input type="text" name="titulo" placeholder="Titulo" class="form-control">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="subtitulo" placeholder="Subtitulo" class="form-control"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: <input class="form-control" type="file" name="imagen" id="imagen"/></label>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="cuerpo" placeholder="Cuerpo" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>